<!-- partials/formBox.ejs -->
<div class="flex items-center justify-center min-h-screen bg-gray-100 p-4">
    <div class="w-full max-w-lg bg-orange-500 rounded-lg shadow-lg p-8">
        <h2 class="text-3xl font-bold text-black text-center mb-6">Créer une nouvelle idée</h2>
        <form id="ideaForm" action="/ideas" method="POST" class="space-y-6">
            <div>
                <label for="title" class="block text-black text-lg font-medium mb-2">Titre de l'idée</label>
                <input type="text" id="title" name="title" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-700 text-black">
            </div>
            <div>
                <label for="description" class="block text-black text-lg font-medium mb-2">Description</label>
                <textarea id="description" name="description" rows="4" required
                          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-700 text-black"></textarea>
            </div>
            <div class="flex justify-center">
                <button type="submit"
                        class="px-6 py-3 bg-white text-orange-500 font-bold text-lg rounded-lg shadow-md hover:bg-gray-100 transition duration-300 ease-in-out">
                    Ajouter l'idée
                </button>
            </div>
        </form>
    </div>
</div>
