<li class="w-full rounded-xl bg-orange-500 px-5 pt-2 pb-4 mb-3 flex justify-between items-center" data-comment-id="<%= comment.id %>" data-idea-id="<%= idea.id %>">
    
    <div class="flex gap-3">
        <!-- Bouton de suppression géré par JavaScript -->
        <button 
            type="button" 
            aria-label="Supprimer le commentaire de <%= comment.name %>"
            class="delete-comment-btn bg-transparent hover:bg-amber-500 rounded-full text-black hover:text-white font-bold py-[0.2rem] px-[0.6rem] text-xl pb-[0.4rem] pr-[1.2rem]">
            X
        </button>

        <div class="flex flex-col self-center">
            <h3 class="text-black text-lg font-bold">
                <%= comment.name %>
            </h3>
            <p class="text-black text-sm font-medium">
                <%= comment.texte %>
            </p>
        </div>
    </div>

    <!-- Bouton de like/unlike géré par JavaScript -->
    <button 
        type="button" 
        data-comment-like="<%= comment.like ? 'true' : 'false' %>"
        aria-label="<%= comment.like ? 'Retirer votre j\'aime pour ce commentaire' : 'Aimer ce commentaire' %>"
        class="like-comment-btn bg-transparent hover:bg-amber-500 rounded-full text-black hover:text-white font-bold py-[0.2rem] px-[0.6rem] text-3xl">
        <%= comment.like ? "♥" : "♡" %>
    </button>
</li>
